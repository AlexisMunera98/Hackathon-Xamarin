<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechAndEdu.agregarPropuestaPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ingrese la propuesta"/>
            <Entry x:Name="propuestaTexto" Placeholder="Propuesta"/>
            <Picker Title="Categoria" x:Name="ListaCategorias"/>
            <Button x:Name="BtnAgregarPropuesta" Text="Agregar" Clicked="BtnAgregarPropuesta_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>